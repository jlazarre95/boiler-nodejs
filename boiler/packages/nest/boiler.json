{
  "params": [
    {
      "name": "name",
      "displayName": "Project name",
      "description": "Name of the Nest project",
      "type": "positional"
    },
    {
      "name": "class-name",
      "displayName": "Class name",
      "description": "Name of the class",
      "type": "positional"
    },
    {
      "name": "plural-class-name",
      "displayName": "Pural class name",
      "description": "Plural form of the class name",
      "type": "virtual",
      "script": "return boiler.string.toPlural(boiler.params['class-name'])"
    },
    {
      "name": "camelcase-class-name",
      "type": "virtual",
      "script": "return boiler.string.toCamelCase(boiler.params['class-name'])"
    },
    {
      "name": "pascalcase-class-name",
      "type": "virtual",
      "script": "return boiler.string.toPascalCase(boiler.params['class-name'])"
    }
  ],
   "templates": [
     {
        "name": "project",
        "outDir": "{{name}}",
        "require": [
          "name"
        ],
        "include": [
           "env",
           "docker",
           "readme",
           {
              "name": "app.module.ts.boiler",
              "outDir": "src"
           }
        ]
     },
     {
        "name": "env",
        "include": [ 
          ".env.boiler"
        ]
     },
     {
        "name": "docker",
        "include": [
           "Dockerfile.boiler"
        ]
     },
     {
        "name": "create-dto",
        "require": [
         "class-name",
         "plural-class-name",
         "camelcase-class-name",
         "pascalcase-class-name"
        ],
        "include": [
          "create-{{class-name}}.dto.ts.boiler"
        ]
     },
     {
        "name": "update-dto",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "update-{{class-name}}.dto.ts.boiler"
        ]
     },
     {
        "name": "class",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.ts.boiler"
        ]
     },
     {
        "name": "interface",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.interface.ts.boiler"
        ]
     },
     {
        "name": "schema",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.schema.ts.boiler"
        ]
     },
     {
        "name": "repository",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
           "{{class-name}}.repository.ts.boiler",
           "repository-test"
        ]
     },
     {
        "name": "service",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
           "{{class-name}}.service.ts.boiler",
           "service-test"
        ]
     },
     {
        "name": "controller",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
           "{{class-name}}.controller.ts.boiler",
           "controller-test"
        ]
     },
     {
        "name": "module",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.module.ts.boiler"
        ]
     },
     {
        "name": "repository-test",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.repository.spec.ts.boiler"
        ]
     },
     {
        "name": "service-test",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.service.spec.ts.boiler"
        ]
     },
     {
        "name": "controller-test",
        "require": [
            "class-name",
            "plural-class-name",
            "camelcase-class-name",
            "pascalcase-class-name"
        ],
        "include": [
          "{{class-name}}.controller.spec.ts.boiler"
        ]
     },
     {
        "name": "api",
        "require": [
            {
               "name": "api-name",
               "displayName": "API name",
               "description": "Name of the API",
               "type": "positional"
            },
            {
               "name": "class-name",
               "displayName": "Class name",
               "description": "Name of the class",
               "type": "virtual",
               "script": "return boiler.params['api-name']"
             },
             {
               "name": "plural-class-name",
               "displayName": "Pural class name",
               "description": "Plural form of the class name",
               "type": "virtual",
               "script": "return boiler.string.toPlural(boiler.params['class-name'])"
             },
             {
               "name": "camelcase-class-name",
               "type": "virtual",
               "script": "return boiler.string.toCamelCase(boiler.params['class-name'])"
             },
             {
               "name": "pascalcase-class-name",
               "type": "virtual",
               "script": "return boiler.string.toPascalCase(boiler.params['class-name'])"
             },
             {
               "name": "plural-pascalcase-class-name",
               "type": "virtual",
               "script": "return boiler.string.toPlural(boiler.params['pascalcase-class-name'])"
             }
        ],
        "outDir": "src/{{api-name}}",
        "include": [
           {
              "name": "create-{{api-name}}.dto.ts.boiler",
              "outDir": "dtos"
           },
           {
              "name": "update-{{api-name}}.dto.ts.boiler",
              "outDir": "dtos"
           },
           {
              "name": "{{api-name}}.ts.boiler"
           },
           {
              "name": "{{api-name}}.schema.ts.boiler",
              "outDir": "repositories"
           },
           {
              "name": "{{api-name}}.repository.ts.boiler",
              "outDir": "repositories"
           },
           {
              "name": "{{api-name}}.repository.spec.ts.boiler",
              "outDir": "repositories"
           },
           {
              "name": "{{api-name}}.service.ts.boiler",
              "outDir": "services"
           },
           {
              "name": "{{api-name}}.service.spec.ts.boiler",
              "outDir": "services"
           },
           {
              "name": "{{api-name}}.controller.ts.boiler"
           },
           {
              "name": "{{api-name}}.controller.spec.ts.boiler"
           },
           {
              "name": "{{api-name}}.module.ts.boiler"
           }
        ]
     },
     {
      "name": "readme",
      "require": [
        "name"
      ],
      "include": [
        "README.md.boiler"
      ]
    }
  ],
  "output": {
     "file": {
        "replace": [
           {
              "target": "{{api-name}}",
              "with": "{{api-name}}"
           }
        ]
     }
  }
}